    }

    .left-img {
      background-image: linear-gradient(to left, #20628a 0%, #112b4a 50%);
      overflow: hidden;
    }

    .form-label {
      color: black !important;
    }

    .row>* {
      padding-right: 10px !important;
    }

    button.btn {
      background-color: #20628a;
      padding: 7px 20px;
      width: 100%;
      border-radius: 5px;
      color: white !important;
    }

    button.btn:hover {
      background-color: #112b4a;
    }

    .form-content {
      /* border: 4px solid white; */
    }

    h1 span {
      color: #20628a;
    }

    select>option {
      color: #20628a;
    }

    h1.header {
      font-weight: 700 !important;
      text-align: center;
    }

    h6.title {
      text-align: center;
    }

    .sign-up a {
      color: #20628a;
      text-decoration: none !important;
      margin-left: 5px;
    }

    .input-group-text {
      background-color: #20628a;
      color: #fff;
    }

    i.fab {
      margin-right: 10px;
    }

    .footer-bottom {
      margin-top: 30px;
      margin-bottom: 15px;
    }

    #footer {
      font-size: 12px;
    }

    /* Extra small devices (phones, 600px and down) */
    @media only screen and (max-width: 600px) {
      .left-img img {
        margin-top: 10%;
      }

      .left-img {
        height: 45vh;
        padding: 10px;
        overflow: hidden;
      }

      .form-content {
        margin-top: 30px;
        margin-bottom: 30px;
      }

      h1.header {
        margin-bottom: 5px !important;
        font-weight: 700 !important;
      }

      h6.title {
        margin-bottom: 10px !important;
      }
    }


    @media only screen and (min-width: 600px) {
      .left-img img {
        margin-top: 30px !important;
        height: 100%;
        width: 100%;
      }

      .left-img {
        height: 65vh;
        margin-bottom: 30px;
        padding: 50px;
      }
    }

    /* Large devices (laptops/desktops, 992px and up) */
    @media only screen and (min-width: 992px) {
      .left-img {
        height: 100%;
        width: 100%;
        padding: 60px;
      }

      body {
        overflow: hidden;
      }

